@require: stdja
@require: cd

document (|
  title = {Sample Document}; author = {gfn};
  show-title = false; show-toc = false;
|) '<
  +p{
    \CD.diagram(5cm)(7cm)(fun cd -> (
      let di = cd#obj (1cm, 3cm) ${D i} in
      let dj = cd#obj (1cm, 1cm) ${D j} in
      let l = cd#obj (4cm, 2cm) ${\colim D} in
      let a = cd#obj (4cm, 6cm) ${A} in
      [
        cd#draw-obj di;
        cd#draw-obj dj;
        cd#draw-obj l;
        cd#draw-obj a;
        cd#draw-arr ${D \alpha} 0.5  2pt di dj;
        cd#draw-arr ${\phi_i}   0.7  5pt di l;
        cd#draw-arr ${\phi_j}   0.7  5pt dj l;
        cd#draw-arr ${\theta_i} 0.3  4pt di a;
        cd#draw-arr ${\theta_j} 0.5  4pt dj a;
        cd#draw-dashed-arr ${h} 0.5  2pt l a;
      ] |> List.concat
    ));
    \CD.diagram(5cm)(7cm)(fun cd -> (
      let di = cd#obj (1cm, 3cm) ${D i} in
      let dj = cd#obj (1cm, 1cm) ${D j} in
      let l = cd#obj (4cm, 2cm) ${\lim D} in
      let a = cd#obj (4cm, 6cm) ${A} in
      [
        cd#draw-obj di;
        cd#draw-obj dj;
        cd#draw-obj l;
        cd#draw-obj a;
        cd#draw-arr ${D \alpha} 0.5  2pt di dj;
        cd#draw-arr ${\phi_i}   0.4  8pt l di;
        cd#draw-arr ${\phi_j}   0.3 12pt l dj;
        cd#draw-arr ${\theta_i} 0.5  6pt a di;
        cd#draw-arr ${\theta_j} 0.55 5pt a dj;
        cd#draw-dashed-arr ${h} 0.5  2pt a l;
      ] |> List.concat
    ));
  }
>
