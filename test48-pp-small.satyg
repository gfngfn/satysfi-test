@stage: 0
@import: external/satysfi-lib/parser

let colon = Char.make `:`

let is-not-colon ch =
  not (Char.equal ch colon)

let small-parser =
  open Parser in
  many (satisfy is-not-colon) >>= (fun chars1 ->
    string `:` >>= (fun _ ->
      many any-char >>= (fun chars2 ->
        return (String.of-list chars1, String.of-list chars2)
      )
    )
  )
